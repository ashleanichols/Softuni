{{#if isAdmin}}
    <h1>Teams</h1>
    <h3>Manage Users</h3>
    <div class="form">
    <form method="POST" action="/team/distribute">
        <label>User</label>
        <select name="user">
            {{#each users}}
                <option value="{{_id}}">{{username}}</option>
            {{/each}}
        </select>
        <label>Team</label>
        <select name="team">
            {{#each teams}}
                <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Distribute">
    </form>
    </div>
{{else}}
    <h1>Teams</h1>
    <form class="search" action="/team/search">
    <label>Search: </label>
    <input type="text" name="searchedTeam">
    <input type="submit" value="Search">
    </form>
    <div class="teams">
        {{#each teams}}
        <div class="team">
            <h2>{{name}}</h2>
            <div class="team-info">
                <h3>Members</h3>
                {{#each members}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
            <div class="team-info">
                <h3>Projects</h3>
                {{#each projects}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
{{/if}}